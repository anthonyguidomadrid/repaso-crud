<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Editar la monta침a rusa {{coaster.name}}</h1>
        </div>
        
        <div class="col-md-6">
            <form action="/coasters/edit?id={{coaster.id}}" method="POST">
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input name="name" type="text" class="form-control" id="name" value="{{coaster.name}}">
                </div>
                <div class="form-group">
                    <label for="description">Descripci칩n</label>
                    <input name="description" type="text" class="form-control" id="description" value="{{coaster.description}}">
                </div>
                <div class="form-group">
                    <label for="inversions">Inversiones</label>
                    <input name="inversions" type="number" class="form-control" id="inversions" value="{{coaster.inversions}}">
                </div>
                <div class="form-group">
                    <label for="length">Longitud</label>
                    <input name="length" type="number" class="form-control" id="length" value="{{coaster.length}}">
                </div>
                <div class="form-group">
                    <input type="checkbox" id="active" name="active" value="true">
                    <label for="active"> Este parque est치 abierto actualmente</label><br>
                </div>
                <div class="form-group">
                    <label for="park_id">Parque en el que se encuentra:</label>
                    <select name="park_id" class="form-control" id="park_id">
                        <option>Seleccionar</option>
                        <option value="{{coaster.park_id.id}}" selected>{{coaster.park_id.name}}</option>
                        {{#each allParks}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Actualizar monta침a rusa</button>
                <a href="/coasters" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>