<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Editar el parque temático {{park.name}}</h1>
        </div>

        <div class="col-md-6">

            <form action="/parks/edit?id={{park.id}}" method="POST">
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input name="name" type="text" class="form-control" id="name" value="{{park.name}}">
                </div>
                <div class="form-group">
                    <label for="description">Descripción</label>
                    <input name="description" type="text" class="form-control" id="description" value="{{park.description}}">
                </div>
                <div class="form-group">
                    <input type="checkbox" id="active" name="active" value="true">
                    <label for="active"> Este parque está abierto actualmente</label><br>
                </div>
                <button type="submit" class="btn btn-dark">Editar parque</button>
            </form>
        </div>

    </div>
</div>